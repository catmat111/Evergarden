@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model ProjetoDW.Models.Cartas

@{
    
    ViewData["Title"] = "Create";
    var categorias = ViewBag.Categorias as List<ProjetoDW.Models.Categorias>;

}
<link rel="stylesheet" href="~/css/Cartas_Criar.css" asp-append-version="true" />

<div class="cima">
    <a asp-action="Index" class="btn btn-back"></a>
    <h1>Escrever Carta</h1>
</div>




<hr />
<div class="row">
    <form asp-action="Create" class="form-carta">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="coluna-esquerda">
            <div class="form-group titulo">
                <input asp-for="Titulo" class="form-control" placeholder="Titulo da Carta" />
                <span asp-validation-for="Titulo" class="text-danger"></span>
            </div>
            <div class="form-group descricao">
                <textarea asp-for="Descricao" class="form-control auto-expand" placeholder="Clique para escrever a carta aqui..."></textarea>
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>
        </div>

        <div class="coluna-direita">
            <div class="form-group">
                <div class="form-group UtilizadoresDFk">
                    <select asp-for="UtilizadorDestinatarioFk" class="form-control " asp-items="ViewBag.UtilizadoresDFk">
                        <option value="">-- Seleciona o destinatário --</option>
                    </select>
                    <span asp-validation-for="UtilizadorDestinatarioFk" class="text-danger"></span>
                </div>
                <div class="form-group Categorias">
                    <label>Categorias</label><br />
                    @foreach (var categoria in categorias)
                    {
                        <div class="form-check">
                            <input class="form-check-input categoria-checkbox"
                                   type="checkbox"
                                   name="categoriasSelecionadas"
                                   value="@categoria.Id"
                                   data-temdata="@(categoria.Tipo ? "true" : "false")"
                                   id="cat_@categoria.Id" />
                            <label class="form-check-label" for="cat_@categoria.Id">@categoria.Nome</label>
                        </div>
                    }
                    @if (ViewData.ModelState["categoriasSelecionadas"]?.Errors.Count > 0)
                    {
                        <span class="text-danger">
                            @ViewData.ModelState["categoriasSelecionadas"].Errors[0].ErrorMessage
                        </span>
                    }
                </div>

                <div id="dataEnvioContainer" class="form-group" style="display:none;">
                    <label for="DataEnvio">Data de Envio</label>
                    <input type="date" name="DataEnvio" class="form-control"  min="@DateTime.Today.ToString("yyyy-MM-dd")"/>
                </div>
                @if (ViewData.ModelState["DataEnvio"]?.Errors.Count > 0)
                {
                    <span class="text-danger">
                        @ViewData.ModelState["DataEnvio"].Errors[0].ErrorMessage
                    </span>
                }

            </div>
            
        </div>

        <div class="form-group Create full-width">
            <input type="submit" value="Create" class="btn btn-primary" />
        </div>
    </form>
</div>

@section Scripts {
    <script>
        const checkboxes = document.querySelectorAll('.categoria-checkbox');
        const dataEnvioContainer = document.getElementById('dataEnvioContainer');

        function verificarCategoriasComData() {
            const mostrarData = Array.from(checkboxes).some(cb => cb.checked && cb.dataset.temdata === "true");

            dataEnvioContainer.style.display = mostrarData ? 'block' : 'none';
        }

        checkboxes.forEach(cb => {
            cb.addEventListener('change', verificarCategoriasComData);
        });

        // Executa na inicialização caso esteja voltando do POST com dados preenchidos
        verificarCategoriasComData();
    </script>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const dateInput = document.querySelector('input[type="date"]');
            if (dateInput) {
                dateInput.addEventListener('keydown', function (e) {
                    e.preventDefault();
                });
            }
        });
    </script>
}
